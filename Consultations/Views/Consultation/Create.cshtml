@model Consultations.ViewModels.CreateConsultationViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Consultation</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Students" class="control-label"></label>
                <br>
                <select asp-for="Students" class="selectpicker" data-live-search="true">
                    @foreach (var p in ViewBag.Students)
                    {

                        <option>@p</option>
                    }
                </select><br>

                <span asp-validation-for="Students" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <input asp-for="Room" class="form-control" />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@if (!String.IsNullOrEmpty((string)ViewData["Consult"]))
{
    @if ((string)ViewData["Consult"] == "ok")
    {
        <div class="alert alert-success" role="alert">Consultation added!</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">@ViewData["Consult"]</div>
    }
}
